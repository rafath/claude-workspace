{
  "permissions": {
    "allow": [
      "Bash(git add:*)",
      "Bash(git checkout:*)",
      "Bash(git fetch:*)",
      "Bash(git pull:*)",
      "Bash(git -C :* diff:*)",
      "Bash(git -C :* show:*)",
      "Bash(git -C :* log:*)",
      "Bash(git -C :* ls-files:*)",
      "Bash(git -C :* status:*)",
      "Bash(gh issue:*)",
      "Bash(gh label create:*)",
      "Bash(gh label list:*)",
      "Bash(rails:*)",
      "Bash(bundle:*)",
      "Bash(rake:*)",
      "SlashCommand(/css:*)",
      "SlashCommand(/issue:*)",
      "SlashCommand(/pr:*)",
      "SlashCommand(/ruby_scratchpad:*)",
      "SlashCommand(/html_scratchpad:*)",
      "SlashCommand(/cleanup:*)",
      "SlashCommand(/record_feature)",
      "Skill(test)",
      "Skill(gh-cli)",
      "Skill(git)"
    ],
    "deny": [
      "Read(./.env)",
      "Read(./.env.*)",
      "Read(./config/master.key)",
      "Read(./config/credentials/**)",
      "Read(./config/credentials.yml.enc)",
      "Read(./**/*secret*)",
      "Read(./**/*.pem)",
      "Read(./**/*.key)",
      "Edit(./.env)",
      "Edit(./config/master.key)",
      "Edit(./.git/config)",
      "Edit(./Gemfile.lock)",
      "Edit(./package-lock.json)",
      "Edit(./db/schema.rb)"
    ],
    "ask": [
      "Bash(git commit:*)",
      "Bash(git push:*)",
      "Bash(gh pr merge:*)",
      "Bash(gh issue edit:*)",
      "Bash(gh issue comment:*)",
      "Bash(rails db:*)",
      "Bash(bundle install:*)"
    ]
  },
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "\"$CLAUDE_PROJECT_DIR\"/.claude/hooks/entrypoints/session_start.rb"
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "\"$CLAUDE_PROJECT_DIR\"/.claude/hooks/entrypoints/user_prompt_submit.rb"
          }
        ]
      }
    ],
    "SessionEnd": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "\"$CLAUDE_PROJECT_DIR\"/.claude/hooks/entrypoints/session_end.rb"
          }
        ]
      }
    ]
  },
  "outputStyle": "Concise",
  "sandbox": {
    "enabled": false,
    "autoAllowBashIfSandboxed": true,
    "excludedCommands": [
      "git"
    ],
    "allowUnsandboxedCommands": false,
    "network": {
      "allowLocalBinding": true
    }
  }
}
