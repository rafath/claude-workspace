#!/bin/zsh
# Auto-rename conversation TXT file using headless Claude
# Args: $1 = txt_file_path

txt_file="$1"

# Generate title using headless Claude
claude -p "Read $txt_file, analyze the conversation, create a concise descriptive title (max 6 words, kebab-case), then rename the file to <yy-mm-dd>_<title>.txt" \
    --allowedTools "Read,Bash" \
    --model haiku \
    2>&1

exit 0
