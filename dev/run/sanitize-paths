#!/bin/bash

### Sanitize user paths in a file: /Users/{username}/ -> ~/
# Usage: ./dev/run/sanitize-paths <file>
# Uncomment the appropriate line for your environment.


set -e

file="$1"

# Error handling
if [[ -z "$file" ]]; then
  echo "Usage: $0 <file>"
  exit 1
fi

if [[ ! -f "$file" ]]; then
  echo "Error: File not found: $file"
  exit 1
fi

# Rename script using sed.
# Linux
#sed -i "s|$HOME/|~/|g" "$file"

# macOS
sed -i '' "s|$HOME/|~/|g" "$file"
